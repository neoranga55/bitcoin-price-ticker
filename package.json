{
  "name": "bitcoin-price-ticker",
  "title": "Bitcoin Price Ticker",
  "id": "jid0-ziK34XHkBWB9ezxd4l9Q1yC7RP0@jetpack",
  "description": "Bitcoin Price Ticker with multiple sources and configurable",
  "author": "neoranga (neoranga55 AT yahoo DOT es)",
  "license": "MPL 2.0",
  "version": "7",
  "permissions": {"private-browsing": true},
  "preferences": [{
    "name": "infoButton",
    "title": "List of changes and information of the Add-on",
    "label": "Show news and information",
    "type": "control"
  },
  {
    "name": "toolbar",
    "title": "Show tickers in a separate tool bar",
    "description": "Enable this to show all tickers in a separate tool bar (good when you have a lot of tickers active) and disable this to show all your tickers in the navigation bar",
    "type": "bool",
    "value": false
  },
  {
    "name": "Timer",
    "title": "Tickers Refresh rate in seconds",
    "description": "Indicate the amount of seconds to wait between each refresh (Warning: Short refresh intervals can cause BitStamp to ban your computer's IP)",
    "type": "integer",
    "value": 120
  },
  {
    "name": "defaultFontSize",
    "title": "Font size",
    "type": "integer",
    "value": 14
  },
  {
    "name": "gold-background",
    "title": "Golden background on Bitcoin prices",
    "type": "bool",
    "value": false
  },
  {
    "name": "silver-background",
    "title": "Silver background on Litecoin prices",
    "type": "bool",
    "value": true
  },
  {
    "name": "other-background",
    "title": "Activate a background color on each other cryptocurrency",
    "type": "bool",
    "value": true
  },
  {
    "name": "show-long-trend",
    "title": "Show long-time trend",
    "type": "bool",
    "value": true
  },
  {
    "name": "show-short-trend",
    "title": "Show short-time trend (since last update)",
    "type": "bool",
    "value": true
  },
  {
    "name": "show-currency-label",
    "title": "Where to display the currency character?",
    "type": "radio",
    "value": "A",
    "options": [{
        "value": "B",
        "label": "Before value ($20)"
      },{
        "value": "A",
        "label": "After value (20$)"
      },{
        "value": "N",
        "label": "No currency character (20)"
      }]
  },
  {
    "name": "show-currency-name",
    "title": "Display currency initials in front of ticker?",
    "type": "bool",
    "value": false
  },
  {
    "name": "do-not-round",
    "title": "Do not make rounding for currency value",
    "type": "bool",
    "value": false
  },
  {
